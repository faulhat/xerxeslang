"I don't remember why I put pointers in this language."

(define i 35)
(define i_ptr (address i))
(define i_retrieved (Int* i_ptr))
(print "Pointer to i: " i_ptr "\n")
(print "Value of i: " i_retrieved "\n")
(alter i_ptr 23)
(print "New value of i: " i "\n")

(define j 3.2)
(define j_ptr (address j))
(define j_retrieved (Float* j_ptr))
(print "Pointer to j: " j_ptr "\n")
(print "Value of j: " j_retrieved "\n")
(alter j_ptr 4.7)
(print "New value of j: " j "\n")

(define k "Hello, world!")
(define k_ptr (address k))
(define k_retrieved (String* k_ptr))
(print "Pointer to k: " k_ptr "\n")
(print "Value of k: " k_retrieved "\n")
(alter k_ptr "Hello, Earth!")
(print "New value of k: " k "\n")

(define l [1 2 3 4])
(define l_ptr (address l))
(define l_retrieved (Array* l_ptr))
(print "Pointer to l: " l_ptr "\n")
(print "First element of l: " (get l_retrieved 0) "\n")
(print "Second element of l: " (get l_retrieved 1) "\n")
(alter l_ptr [3 4 1])
(print "New first element of l: " (get l 0) "\n")
(print "New second element of l: " (get l 1) "\n")